  "PATCH /api/articles/:article_id": {
    "description": "increases, or decreases, the votes property of a specific article",
    "exampleResponse": {
      "before": {
        "article_id": 1,
        "title": "coding",
        "author": "bigboygump",
        "body": "I like coding",
        "created_at": 198783284593543,
        "votes": 2,
        "avatar_url": "https://myavatar.gothib.com/123432",
        "comment_count": 12
      },
      "after": {
        "article_id": 1,
        "title": "coding",
        "author": "bigboygump",
        "body": "I like coding",
        "created_at": 198783284593543,
        "votes": 102,
        "avatar_url": "https://myavatar.gothib.com/123432",
        "comment_count": 12
      }
    }
  },
  "POST /api/articles/:article_id/comments": {
    "description": "adds a new comment to the specified article",
    "exampleResponse": {
      "comment_id": 101,
      "body": "my first ever comment",
      "article_id": 1,
      "author": "newguy123",
      "votes": 0,
      "created_at": "234567654333"
    }
  },
  "DELETE /api/comments/:comment_id": {
    "description": "deletes an existing comment by comment_id",
    "exampleResponse": {
      "before": {
        "comment_id": 101,
        "body": "my first ever comment",
        "article_id": 1,
        "author": "newguy123",
        "votes": 0,
        "created_at": "234567654333"
      },
      "after": "No comments exist with that comment ID"
    }
  }
}
