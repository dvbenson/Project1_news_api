  "GET /api/articles/:article_id": {
    "description": "serves an object of a single article",
    "queries": ["author", "topic", "sort_by", "order"],
    "exampleResponse": {
      "article": [
        {
          "article_id": 1,
          "title": "coding",
          "author": "bigboygump",
